{
  "plugins": ["html"],
  "settings": {
    "html/html-extensions": [".html", ".ejs"]
  },
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "extends": ["alloy", "alloy/typescript"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", { "code": 100 }],
    "prefer-const": "error"
  },
  "globals": { "JQuery": "readonly" }
}
